<%- include("../partials/header") %>

<div class='container'>
	<div class="row">
		<h2 style="text-align: center"> Edit your comment below </h2>
		<div style="width:30%; margin :50px auto">
			<form action="/campgrounds/<%=campgrounds_slug%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class='form-control' type="text" value="<%=comment.text%>" name="comment[text]">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

